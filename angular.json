{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "cli": {
      "analytics": false
    },
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "electron": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                },
                "@schematics/angular:application": {
                    "strict": true
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "aot": true,
                        "baseHref": ".",
                        "outputPath": "dist/web",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "verbose": true,
                        "assets": [
                            "src/favicon.ico",
                            "src/assets"
                        ],
                        "styles": [
                            {
                                "bundleName": "default.theme",
                                "input": "src/assets/theme/default.theme.scss"
                            },
                            {
                                "bundleName": "spring.theme",
                                "input": "src/assets/theme/spring.theme.scss"
                            },
                            {
                                "bundleName": "summer.theme",
                                "input": "src/assets/theme/summer.theme.scss"
                            },
                            {
                                "bundleName": "autumn.theme",
                                "input": "src/assets/theme/autumn.theme.scss"
                            },
                            {
                                "bundleName": "winter.theme",
                                "input": "src/assets/theme/winter.theme.scss"
                            },
                            {
                                "bundleName": "styles",
                                "input": "src/styles.scss"
                            }
                        ],
                        "scripts": []
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "4mb",
                                    "maximumError": "8mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "4mb",
                                    "maximumError": "8mb"
                                }
                            ],
                            "fileReplacements": [
                                {
                                    "replace": "src/environments/environment.ts",
                                    "with": "src/environments/environment.prod.ts"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "buildOptimizer": true,
                            "optimization": true,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "browserTarget": "electron:build:production",
                            "disableHostCheck": false,
                            "host": "0.0.0.0",
                            "port": 8080,
                            "verbose": false
                        },
                        "development": {
                            "browserTarget": "electron:build:development",
                            "disableHostCheck": false,
                            "host": "localhost",
                            "port": 8080,
                            "verbose": false
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "browserTarget": "electron:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "tsconfig.spec.json",
                        "karmaConfig": "karma.conf.js",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets"
                        ],
                        "styles": [
                            "src/styles.scss",
                            {
                                "input": "src/assets/theme/default.theme.scss",
                                "bundleName": "default.theme"
                            },
                            {
                                "input": "src/assets/theme/spring.theme.scss",
                                "bundleName": "spring.theme"
                            },
                            {
                                "input": "src/assets/theme/summer.theme.scss",
                                "bundleName": "summer.theme"
                            },
                            {
                                "input": "src/assets/theme/autumn.theme.scss",
                                "bundleName": "autumn.theme"
                            },
                            {
                                "input": "src/assets/theme/winter.theme.scss",
                                "bundleName": "winter.theme"
                            }
                        ],
                        "scripts": []
                    }
                }
            }
        }
    },
    "defaultProject": "electron"
}

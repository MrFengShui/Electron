{
    "name": "electron",
    "homepage": "https://github.com/MrFengShui/Electron",
    "main": "app/main.js",
    "author": {
        "name": "MrFengShui",
        "email": "luansongjian@gmail.com"
    },
    "keywords": [
        "Angular",
        "Electron"
    ],
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/MrFengShui/Electron.git"
    },
    "version": "0.0.0",
    "build": {
        "asar": false,
        "appId": "com.github.mrfengshui.electron",
        "copyright": "MrFengShui",
        "directories": {
            "output": "pack"
        },
        "files": [
            "**/*",
            "!**/*.ts",
            "!*.map",
            "!*.js",
            "!package.json",
            "!package-lock.json",
            "!angular.json",
            "!**/.angular/",
            "!src/",
            "!node_modules/",
            "!*.md",
            "!.browserslistrc",
            "!tsconfig.json",
            "!tsconfig.app.json",
            "!tsconfig.serve.json",
            "!tsconfig.spec.json"
        ],
        "extraFiles": {
            "from": "./dist",
            "to": "./resources/app",
            "filter": [
                "**/*"
            ]
        },
        "productName": "electron",
        "win": {
            "icon": "app/logo.png",
            "publish": {
                "owner": "MrFengShui",
                "private": true,
                "provider": "github",
                "releaseType": "release",
                "repo": "Electron",
                "token": "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"
            },
            "target": [
                {
                    "target": "nsis",
                    "arch": "x64"
                }
            ]
        },
        "nsis": {
            "allowElevation": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Electron",
            "oneClick": false
        }
    },
    "scripts": {
        "ng": "ng",
        "serve": "ng serve",
        "start": "npm-run-all -p angular:serve electron:serve",
        "build": "npm run angular:build && npm run electron:build",
        "test": "ng test",
        "watch": "ng build --watch --configuration development",
        "angular:serve": "ng serve",
        "angular:build": "ng build",
        "electron:serve": "wait-on tcp:8080 && tsc -p tsconfig.serve.json && electron . --serve",
        "electron:build": "tsc -p tsconfig.serve.json && electron-builder --win"
    },
    "dependencies": {
        "@angular/animations": "~13.1.0",
        "@angular/cdk": "^13.3.7",
        "@angular/common": "~13.1.0",
        "@angular/compiler": "~13.1.0",
        "@angular/core": "~13.1.0",
        "@angular/forms": "~13.1.0",
        "@angular/localize": "^13.3.9",
        "@angular/material": "^13.3.5",
        "@angular/platform-browser": "~13.1.0",
        "@angular/platform-browser-dynamic": "~13.1.0",
        "@angular/router": "~13.1.0",
        "@ngneat/transloco": "^4.0.0",
        "rxjs": "~7.4.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.11.4"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~13.1.2",
        "@angular/cli": "~13.1.2",
        "@angular/compiler-cli": "~13.1.0",
        "@types/jasmine": "~3.10.0",
        "@types/node": "^12.11.1",
        "electron": "18.1.0",
        "electron-builder": "^23.0.3",
        "electron-debug": "^3.2.0",
        "electron-reloader": "^1.2.3",
        "jasmine-core": "~3.10.0",
        "karma": "~6.3.0",
        "karma-chrome-launcher": "~3.1.0",
        "karma-coverage": "~2.1.0",
        "karma-jasmine": "~4.0.0",
        "karma-jasmine-html-reporter": "~1.7.0",
        "node-polyfill-webpack-plugin": "^1.1.4",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.7.0",
        "typescript": "~4.5.2",
        "wait-on": "^6.0.1"
    }
}
